import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        System.out.println("Digite sua matrícula: ");
        int matricula = sc.nextInt();
        System.out.println("Digite seu nome: ");
        String nome = sc.next();
        System.out.println("Digite seu salário: ");
        double salario = sc.nextDouble();
        double INSS = salario * 0.15;
        double salario_liquido = salario - INSS;
        System.out.println("A sua matrícula é:"+matricula);
        System.out.println("O seu nome é:"+nome);
        System.out.println("O seu salário é"+salario);
        System.out.println("O desconto do INSS é"+INSS);
        System.out.println("O salário liquido é"+salario_liquido);

    }
}
